<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.volunteer.HomeVolunteerFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/maps_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mapa_de_peticiones_tab" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/list_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lista_de_peticiones_tab" />
            <com.google.android.material.tabs.TabItem
                android:id="@+id/list_accepted_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/peticiones_aceptadas" />

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>