<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.UserProfileActivity"
    android:background="@color/colorWhiteCian">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorCian"
        android:text="MI Perfil">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="Perfil"
            android:textColor="@color/colorBlack"
            android:textSize="30dp"
            android:textStyle="bold" />
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/cardview_light_background"
        android:gravity="center"
        android:padding="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:clickable="false"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_account_circle_24"
            app:civ_border_color="@color/colorCian"
            app:civ_border_width="4dp"
            tools:ignore="MissingClass" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Nombre4"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/user_name"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@string/user_name"/>


                <TextView
                    android:id="@+id/Nombre"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/Nombre4"
                    android:hint="@string/user_name"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="16dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Apellido2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@string/user_surname"/>

                <TextView
                    android:id="@+id/Apellido"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="Apellido"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:layout_toRightOf="@+id/Apellido2" />

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/email2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@string/user_email"/>

                <TextView
                    android:id="@+id/email"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/user_email"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/email2">

                </TextView>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dni2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_dni"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@string/user_dni"/>

                <TextView
                    android:id="@+id/dni"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_dni"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:layout_toRightOf="@+id/dni2"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_height="wrap_content"
                    android:id="@+id/codigo_postal2"
                    android:hint="@string/hint_codigopostal_EditText"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="120dp"
                    android:text="@string/user_postalcode"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="250dp"
                    android:id="@+id/codigo_postal"
                    android:hint="@string/user_postalcode"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:layout_toRightOf="@+id/codigo_postal2"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/puntuacion_media2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@string/user_puntuation" />

                <TextView
                    android:id="@+id/puntuacion_media"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:layout_toRightOf="@+id/puntuacion_media2"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/direccion2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/user_direction"
                android:visibility="gone">

            </TextView>

            <TextView
                android:id="@+id/direccion"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:visibility="gone"
                android:layout_toRightOf="@+id/direccion2"

                />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/piso_puerta2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:text="@string/user_piso"
                android:textStyle="bold"
                android:visibility="gone">

            </TextView>

            <TextView
                android:id="@+id/piso_puerta"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/piso_puerta2"
                android:visibility="gone">

            </TextView>

        </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/motivo2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:drawSelectorOnTop="true"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@string/user_motivo"
                    android:visibility="gone"
                    >

                </TextView>

                <TextView
                    android:id="@+id/motivo"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:drawSelectorOnTop="true"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:layout_toRightOf="@+id/motivo2"
                    android:visibility="gone"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>